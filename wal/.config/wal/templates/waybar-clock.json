{{
  "clock": {{
    "interval": 60,
    "format": "{{:%A, %B %d | %I:%M %p}}",
    "timezone": "America/Detroit",
    "tooltip-format": "{{calendar}}",
    "calendar": {{
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {{
        "months": "<span line_height='1.5' color='{foreground}'><b>{{}}</b></span>",
        "days": "<span color='{foreground}'><b>{{}}</b></span>",
        "weekdays": "<span color='{color5}'><b>{{}}</b></span>",
        "today": "<span color='{color6}'><b><u>{{}}</u></b></span>",
      }}
    }},
    "actions": {{
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }},
  }}
}}
